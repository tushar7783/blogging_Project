<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); -%>

    <title>Blog page</title>
  </head>
  <body>
    <%- include('partials/nav'); -%>

    <div class="container mt-4">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Cover Image</label>
          <input
            type="file"
            class="form-control"
            id="coverImage"
            name="coverImage"
            aria-describedby="title"
          />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="Text"
            class="form-control"
            id="title"
            name="title"
            aria-describedby="title"
          />
        </div>
        <div class="mb-3">
          <label for="body" class="form-label">body</label>
          <textarea
            class="form-control"
            placeholder="Description about the blog"
            name="body"
            id="floatingTextarea"
          ></textarea>
          <!-- <label for="floatingTextarea">Description about the blog </label> -->
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </div>
      </form>
    </div>
    <%-include('partials/scripts'); -%>
  </body>
</html>
